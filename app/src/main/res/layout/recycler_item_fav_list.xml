<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="14dp">

    <View
        android:id="@+id/recycler_item_fav_list_v"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_background_circular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:1" />

    <ImageView
        android:id="@+id/recycler_item_fav_list_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favourite_grey"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@+id/recycler_item_fav_list_v"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_item_fav_list_v"
        app:layout_constraintStart_toStartOf="@+id/recycler_item_fav_list_v"
        app:layout_constraintEnd_toEndOf="@+id/recycler_item_fav_list_v"/>

    <TextView
        android:id="@+id/recycler_item_fav_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/tv_fav_list_common"
        android:textSize="16sp"
        android:textColor="#4a4949"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/recycler_item_fav_list_v"
        app:layout_constraintStart_toEndOf="@id/recycler_item_fav_list_v"/>

    <TextView
        android:id="@+id/recycler_item_fav_list_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_fav_list_common2"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/recycler_item_fav_list_tv"
        app:layout_constraintStart_toStartOf="@id/recycler_item_fav_list_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>