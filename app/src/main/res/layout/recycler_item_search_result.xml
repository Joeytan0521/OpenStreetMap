<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/recycler_item_search_result_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New York"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/recycler_item_search_result_region_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USA"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/recycler_item_search_result_city_tv"
        app:layout_constraintStart_toStartOf="@id/recycler_item_search_result_city_tv"/>

    <ImageView
        android:id="@+id/recycler_item_search_result_ic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_previous_selection"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>